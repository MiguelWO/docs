        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Inmobiliaria Los Pinos",
            "description": "Nombre de la inmobiliaria"
          },
          "email": {
            "type": "string",
            "example": "inmobiliaria@gmail.com",
            "description": "Correo electrónico de la inmobiliaria"
          },
          "phone": {
            "type": "string",
            "example": "1234567890"
          }
        }
      },
      "Unauthorized": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Invalid API Key"
          }
        }
      },
      "NotFound": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Brokers not found"
          }
        }
      },
      "BadRequest": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
